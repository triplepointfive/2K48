#app.container
  div is="game-field"

script#game-field type="text/template"
  .game-field
    .game-header
      h1.score Score: {{ grid.score }}
    div is="game-grid" :grid="rawGrid"
    div is="game-controls" @move="move"

script#game-grid type="text/template"
  .game-grid
    .grid-row v-for="i in 4"
      .grid-cell.-empty v-for="j in 4" :data-row="i-1" :data-column="j-1"
    div[
      is="game-grid-cell"
      v-for="cell in grid"
      :i="cell.i"
      :j="cell.j"
      :raw-value="cell.value"
      :key="cell.id"
    ]

script#game-grid-cell type="text/template"
  .grid-cell.-tile :class="cellClasses"
    .value
      | {{ value }}

<script src="https://code.jquery.com/jquery-3.2.1.js" integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous"></script>
